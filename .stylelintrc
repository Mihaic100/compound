{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "content",
          "each",
          "else",
          "extend",
          "forward",
          "function",
          "if",
          "import",
          "include",
          "mixin",
          "return",
          "use"
        ]
      }
    ],
    "function-calc-no-invalid": null
  }
}
